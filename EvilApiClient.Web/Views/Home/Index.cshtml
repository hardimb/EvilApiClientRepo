@model EvilApiClient.Web.Models.Home.UploadFileViewModel
@{
    ViewBag.Title = "Customer file upload";
}


@section Styles
{
  <link href="@Url.Content("~/Content/Home/Index.css")" rel="stylesheet" type="text/css" />
}


@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")        
    <script src="@Url.Content("~/Scripts/Home/index.js")"></script>    
    <!--Reference the SignalR library. -->
    <script src="@Url.Content("~/Scripts/jquery.signalR-2.2.1.js")"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="@Url.Content("~/signalr/hubs")"></script>
}


@using (Html.BeginForm("UploadFilePost", "Home", FormMethod.Post, new { enctype = @"multipart/form-data", role = "form", id = "uploadFile-Form" }))
{    
    <div class="row">
        <h2>Customer File Upload </h2>
    </div>
    <div class="alert alert-success" id="uploadSuccess">
        File Uploaded Successfully
    </div>
    <div class="alert alert-success" id="fileprocessMessage">        
    </div>
    <div class="alert alert-danger" id="uploadFailed">
        File Upload Failed !!
    </div>
    <div class="form-group">
         @Html.LabelFor(model => model.UserName, "Name :",  new { @class = "control-label" })
        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" , @placeholder="Enter your name" })
     
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.UploadFile, "Name :", new { @class = "control-label" })
        @Html.TextBoxFor(model => model.UploadFile, new { @class = "form-control-file", type="file" })
        <small id="fileHelp" class="form-text text-muted">please upload only csv file.</small>

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" id="submitupload">Upload</button>
    </div>    

   
}
<div class="row">
    <div class="col-md-12 loader" id="loaderMessage">
        Uploading file      
    </div>
</div>
<div class="row resultgrid">
    <div class="col-md-12" id="fileProcessResponse">    
           
    </div>
</div>